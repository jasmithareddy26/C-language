#include<stdio.h>
void main(){
    int i,j,k,n,m,count;
    printf("enter no.of blocks: ");
    scanf("%d",&n);
    printf("enter the no.of stars: ");
    scanf("%d",&m);
    for(i=0;i<n;i++){
        count=0;
        for(j=i+1;j<=n;j++){
            for(k=0;k<m;k++){
                printf(" * ");
                count++;
            }
            printf("\n");
        }
        printf("%d",count);
        printf("\n_______________________\n");
    }
}
